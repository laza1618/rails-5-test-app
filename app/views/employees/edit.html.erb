<% content_for(:title, 'Employees#edit') %>

<%= form_for(@employee) do |f| %>
  <%= render partial: 'users/form_common_field', locals: { f: f } %>

  <div class="form-group row">
    <div class="col-sm-1">
      <%= f.label :skills_number %>
    </div>
    <div class="col-sm-11">
      <%= f.text_field :skills_number, class: "form-control" %>
    </div>
  </div>

  <%= f.submit 'OK', class: "btn btn-primary" %>
<% end %>
