<% content_for(:title, 'Manager#Edit') %>

<%= form_for(@manager) do |f| %>
  <%= render partial: 'users/form_common_field', locals: { f: f } %>

  <div class="form-group row">
    <div class="col-sm-1">
      <%= f.label :team_size %>
    </div>
    <div class="col-sm-11">
      <%= f.text_field :team_size, class: "form-control" %>
    </div>
  </div>

  <%= f.submit 'OK', class: 'btn btn-primary' %>
<% end %>
