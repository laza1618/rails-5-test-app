<% content_for(:title, 'Manager#Edit') %>

<%= form_for(@manager) do |f| %>
  <div class="form-group row">
    <div class="col-sm-1">
      <%= f.label :name %>
    </div>
    <div class="col-sm-11">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-1">
      <%= f.label :age %>
    </div>
    <div class="col-sm-11">
      <%= f.text_field :age, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-1">
      <%= f.label :gender %>
    </div>
    <div class="col-sm-11">
      <%= f.select :gender, User.genders, {}, {class: "form-control"} %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-1">
      <%= f.label :team_size %>
    </div>
    <div class="col-sm-11">
      <%= f.text_field :team_size, class: "form-control" %>
    </div>
  </div>

  <%= f.submit 'OK', class: 'btn btn-primary' %>
<% end %>
